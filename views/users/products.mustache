{{> header}}

<div class="container mt-5">
    <h2 class="mb-4">My Products</h2>
    
    {{#message}}
    <div class="alert alert-{{type}}">{{message}}</div>
    {{/message}}

    <div class="row">
        {{#products}}
        <div class="col-md-4 mb-4">
            <div class="card">
                {{#images}}
                <img src="{{imageURL}}" class="card-img-top" alt="{{../title}}" onerror="this.src='/images/no-image.jpg'">
                {{/images}}
                {{^images}}
                <img src="/images/no-image.jpg" class="card-img-top" alt="{{title}}">
                {{/images}}
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{#description}}{{#truncate}}{{description}}{{/truncate}}{{/description}}</p>
                    <p class="product-price">${{price}}</p>
                    <div class="button-group">
                        <a href="/users/products/{{id}}" class="btn btn-secondary">Edit</a>
                        <form action="/users/delete-product" method="POST">
                            <input type="hidden" name="productId" value="{{id}}" />
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/products}}
        {{^products}}
        <div class="col-12">
            <p>You haven't added any products yet.</p>
            <a href="/users/add-product" class="btn btn-primary">Add Your First Product</a>
        </div>
        {{/products}}
    </div>
</div>

{{> footer}}
